<div class="section">
{{>nav}}
</div>
<section class="container wrapper" id="add">
  <div class="form-wrap">
    <h1>Make some changes...</h1>


    <form action="/api/dreams" method="POST">
      <div class="input-group">
        <label for="title">Title</label>
        <input type="text" name="title" id="title" class="input-box" maxlength="100" value="{{dream.title}}">
      </div>
      <div class="input-group">
        <label for="technolovisual visualvisuales">Tags/Themes</label>
        <input type="text" name="tags" id="tags" class="input-box"
          maxlength="100" value="{{dream.tags}}">
      </div>
      <div class="input-group">
        <label for="description">Dream</label>
        <textarea name="description" id="description" class="input-box" 
          rows="15">{{dream.description}}</textarea>
      </div>
      <input type="submit" value="Add Dream" id="btn-update" data-dream="{{dream.id}}"class="btn bg-warning">
    </form>
  </div>
</section>