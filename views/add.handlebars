{{!-- Original --}}
<div class="container">
  {{!-- <div class="fixed-bg bg-2"> --}}
    <div class="row page-wrap">
      {{!-- <div class="form-wrap page-wrap scroll-bg"> --}}
        {{!-- <div class="row"> --}}
          <h1 class="h1-add offset-md-1">Add Your Dream</h1>

          <div class="col-md-6 offset-md-1 mr-25 bg-white">
            <form action="/api/dreams" method="POST" id="form">

              <div class="form-group">
                <label for="title">Title</label>
                <input type="text" name="title" id="title" class="input-box form-control form-control-lg"
                  placeholder="The Dog Bushes" maxlength="100" value={{title}}>
              </div>
              <div class="form-group">
                <label for="tags">Tags/Themes</label>
                <input type="text" name="tags" id="tags" class="input-box form-control form-control-lg"
                  placeholder="chase, dog, night" maxlength="100" value={{tags}}>
              </div>
              <div class="form-group">
                <label for="description">Dream</label>
                <textarea name="description" id="description" class="input-box"
                  placeholder="It was a long, dark road..." rows="10">{{description}}</textarea>
              </div>
          </div>
          <div class="col-md offset-md-1 bg-white">
            <h2>Dream Stats</h2><span><em>This is optional</em></span>
            <select class="form-select" name="mood" id="mood" aria-label="Default select example">
              <option selected>Mood</option>
              <option value="happy">Happy</option>
              <option value="sad">Sad</option>
              <option value="neutral">Neutral</option>
              <option value="frightened">Frightened</option>
              <option value="angry">Angry</option>
              <option value="anxious">Anxious/Stressed</option>
            </select>
            <div class="form-check">
              <input class="form-check-input" type="radio" name="lucid" value="true" id="lucid">
              <label class="form-check-label" for="flexRadioDefault1">Lucid Dream?</label>
            </div>
            <div class="form-check">
              <input class="form-check-input" type="radio" name="nightmare" value="true" id="nightmare">
              <label class="form-check-label" for="flexRadioDefault1">Nightmare?</label>
            </div>
            <div class="form-check">
              <input class="form-check-input" type="radio" name="recdream" value="true" id="recdream">
              <label class="form-check-label" for="flexRadioDefault1">Recurring dream?</label>
            </div>
            <div class="form-check">
              <input class="form-check-input" type="radio" name="rectheme" value="true" id="rectheme">
              <label class="form-check-label" for="flexRadioDefault1">Recurring Theme?</label>
            </div>
            <button type="submit" value="Add Dream" id="btn-add" class="btn btn-dark">Submit</button>
            <br>
            <br>
            <br>
            </form>
          </div>
        </div>
      </div>





      <div class="footer">
