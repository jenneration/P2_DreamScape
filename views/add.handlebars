{{>nav}}

<section class="container wrapper" id="add" >
    <div class="form-wrap">
      <h1>Add Your Dream</h1>
      {{!-- <p>Your contact email will be shared with registered users to apply to your gig</p> --}}
      {{!-- Display errors --}}
{{#each errors}}
<div class="error">
  <p>{{text}}</p>
</div>
{{/each}}

      <form action="/gigs/add" method="POST">
        <div class="input-group">
          <label for="title">Title</label>
          <input type="text" name="title" id="title" class="input-box" placeholder="eg. Small Wordpress website, React developer"
            maxlength="100" value={{title}}>
        </div>
        <div class="input-group">
          <label for="technologies">Tags/Themes</label>
          <input type="text" name="technologies" id="technologies" class="input-box" placeholder="chase, dog, night"
          maxlength="100" value={{tags}}>
        </div>
        <div class="input-group">
          <label for="budget">IS THIS ONE NEEDED?</label>
          <input type="number" name="budget" id="budget" class="input-box" placeholder="???" value={{body}}>
        </div>
        <div class="input-group">
          <label for="description">Dream</label>
          <textarea name="description" id="description" class="input-box" placeholder="It was a long, dark road..."
            rows="10">{{description}}</textarea>
        </div>
        <div class="input-group">
          <label for="budget">Maybe tags go here???</label>
          <input type="text" name="#" id="#" class="input-box" placeholder="TAG?" value={{contact_email}}>
        </div>
        <input type="submit" value="Add Gig" class="btn btn-reverse bg-warning">
      </form>
    </div>
  </section>