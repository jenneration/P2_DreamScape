<div class="container-md wrapper" id="add">
  <h1>Add Your Dream</h1>
  <div class="row form-wrap">
    <div class="col-md-8">
      <form action="/api/dreams" method="POST">
        {{!-- <form class="cms"> --}}
          <form id="add">
            <div class="input-group">
              <label for="title">Title</label>
              <input type="text" name="title" id="title" class="input-box"
                placeholder="eg. Small Wordpress website, React developer" maxlength="100" value={{title}}>
            </div>
            <div class="input-group">
              <label for="technolovisual visualvisuales">Tags/Themes</label>
              <input type="text" name="tags" id="tags" class="input-box" placeholder="chase, dog, night" maxlength="100"
                value={{tags}}>
            </div>
            <div class="input-group">
              <label for="description">Dream</label>
              <textarea name="description" id="description" class="input-box" placeholder="It was a long, dark road..."
                rows="10">{{description}}</textarea>
            </div>
            <button type="submit" value="Add Dream" id="btn-add" class="btn bg-warning">Submit</button>
          </form>
    </div>
    <div class="col-sm">
      <h3>Some stats</h3>
    </div>
  </div>
</div>